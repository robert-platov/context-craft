{
  "name": "context-craft",
  "displayName": "Context Craft",
  "publisher": "airizom",
  "description": "Cherry pick workspace files and copy them as XML payloads for LLM prompts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Airizom/context-craft.git"
  },
  "bugs": {
    "url": "https://github.com/Airizom/context-craft/issues"
  },
  "homepage": "https://github.com/Airizom/context-craft#readme",
  "license": "MIT",
  "keywords": [
    "llm",
    "prompt",
    "clipboard",
    "xml",
    "context",
    "gitignore"
  ],
  "version": "1.3.4",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextCraftExplorer",
          "title": "Context Craft",
          "icon": "resources/activity-bar-icon.png"
        }
      ]
    },
    "views": {
      "contextCraftExplorer": [
        {
          "id": "contextCraftFileBrowser",
          "name": "Context Craft"
        },
        {
          "id": "contextCraftSettings",
          "name": "Settings"
        }
      ]
    },
    "configuration": {
      "title": "Context Craft",
      "properties": {
        "contextCraft.fileMapMode": {
          "type": "string",
          "enum": ["disabled", "selected", "all"],
          "default": "selected",
          "enumDescriptions": [
            "No file map in output",
            "Show only selected files in tree",
            "Show full project tree (respects .gitignore)"
          ],
          "description": "File map mode for copied context"
        }
      }
    },
    "commands": [
      {
        "command": "contextCraft.selectFileMapMode",
        "title": "Select File Map Mode"
      },
      {
        "command": "contextCraft.toggleShowIgnoredFiles",
        "title": "Toggle Show Ignored Files"
      },
      {
        "command": "contextCraft.selectGitChanges",
        "title": "Select Git Changes",
        "icon": "$(git-commit)"
      },
      {
        "command": "contextCraft.unselectAll",
        "title": "Unselect All",
        "icon": "$(circle-slash)"
      },
      {
        "command": "contextCraft.copySelected",
        "title": "Copy Selected",
        "icon": "$(copy)"
      },
      {
        "command": "contextCraft.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "contextCraft.openFile",
        "title": "Open"
      },
      {
        "command": "contextCraft.openToSide",
        "title": "Open to the Side"
      },
      {
        "command": "contextCraft.revealInOS",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "contextCraft.openInTerminal",
        "title": "Open in Integrated Terminal"
      },
      {
        "command": "contextCraft.copyPath",
        "title": "Copy Path"
      },
      {
        "command": "contextCraft.copyRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "contextCraft.renameFile",
        "title": "Rename"
      },
      {
        "command": "contextCraft.deleteFile",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "contextCraft.openFile",
          "when": "viewItem == file && view == contextCraftFileBrowser",
          "group": "navigation@1"
        },
        {
          "command": "contextCraft.openToSide",
          "when": "viewItem == file && view == contextCraftFileBrowser",
          "group": "navigation@2"
        },
        {
          "command": "contextCraft.revealInOS",
          "when": "view == contextCraftFileBrowser",
          "group": "2_workspace@1"
        },
        {
          "command": "contextCraft.openInTerminal",
          "when": "viewItem == folder && view == contextCraftFileBrowser",
          "group": "2_workspace@2"
        },
        {
          "command": "contextCraft.copyPath",
          "when": "view == contextCraftFileBrowser",
          "group": "5_cutcopypaste@1"
        },
        {
          "command": "contextCraft.copyRelativePath",
          "when": "view == contextCraftFileBrowser",
          "group": "5_cutcopypaste@2"
        },
        {
          "command": "contextCraft.renameFile",
          "when": "view == contextCraftFileBrowser",
          "group": "7_modification@1"
        },
        {
          "command": "contextCraft.deleteFile",
          "when": "view == contextCraftFileBrowser",
          "group": "7_modification@2"
        }
      ],
      "view/title": [
        {
          "command": "contextCraft.selectGitChanges",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        },
        {
          "command": "contextCraft.unselectAll",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        },
        {
          "command": "contextCraft.copySelected",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation"
        },
        {
          "command": "contextCraft.refresh",
          "when": "view == contextCraftFileBrowser",
          "group": "navigation@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "build:tests": "npm run compile",
    "test:unit": "npm run build:tests && npm run test:unit:run",
    "test:unit:run": "mocha --config .mocharc.json \"out/test/suite/**/*.test.js\"",
    "test:integration": "npm run build:tests && npm run test:integration:run",
    "test:integration:run": "vscode-test",
    "test": "npm run lint && npm run build:tests && npm run test:unit:run && npm run test:integration:run"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.96.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "glob": "^10.3.10",
    "mocha": "^10.8.2",
    "proxyquire": "^2.1.3",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "gpt-tokenizer": "^2.9.0",
    "ignore": "^5.3.2"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  }
}
